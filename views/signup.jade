link(rel='stylesheet', href='stylesheets/signup.css')
script(src='javascripts/signup.js')
div(class='section-header') #{sectionTitle}
div(class='step-section-selected')
    div(class='step-section-content')
        p Setup a Github Account
        p(class='tiny-description') A Github &#0153; account is required for the hackathon. You can signup for free or login to your account.
        div(class='buttons-padded')
            form(class='buttons')
                input(type='button',value='Sign in with Github',onclick='signin()')
                input(type='button',class='longer-button', value='Sign up for an account',onclick='createGithubAccount()')
